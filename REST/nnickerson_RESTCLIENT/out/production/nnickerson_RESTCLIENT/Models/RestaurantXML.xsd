<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="Restaurants">
        <xs:complexType>
            <xs:sequence>
                <xs:element maxOccurs="unbounded" ref="Restaurant"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="Restaurant">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="Menu"/>
            </xs:sequence>
            <xs:attribute name="name" use="required"/>
        </xs:complexType>
    </xs:element>
    <xs:element name="Menu">
        <xs:complexType>
            <xs:sequence>
                <xs:element maxOccurs="unbounded" ref="MenuItem"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="MenuItem">
        <xs:complexType>
            <xs:attribute name="discription" use="required"/>
            <xs:attribute name="name" use="required"/>
            <xs:attribute name="price" use="required" type="xs:decimal"/>
        </xs:complexType>
    </xs:element>
</xs:schema>
